<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/close_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:padding="2dp"
        android:src="@drawable/ic_dialog_close_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#606368"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/send_feedback"
        android:textColor="#4c4f52"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/close_iv"
        app:layout_constraintStart_toEndOf="@+id/close_iv"
        app:layout_constraintTop_toTopOf="@id/close_iv"
        android:layout_marginLeft="16dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/send_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="14dp"
        android:padding="2dp"
        android:src="@drawable/ic_feedback_send"
        app:layout_constraintBottom_toBottomOf="@id/close_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/close_iv"
        app:tint="#81868a"
        android:layout_marginRight="14dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#e2e3e6"
        app:layout_constraintTop_toBottomOf="@id/close_iv" />

    <Spinner
        android:id="@+id/sender_spinner"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:paddingStart="8dp"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@id/close_iv"
        android:paddingLeft="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e2e3e6"
        app:layout_constraintTop_toBottomOf="@id/sender_spinner" />


    <EditText
        android:id="@+id/feedback_msg_et"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="8dp"
        android:background="@null"
        android:gravity="top"
        android:hint="@string/feedback_msg_hint"
        android:padding="12dp"
        android:textColor="#57595c"
        android:textColorHint="#75777c"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/screenshot_card_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sender_spinner"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/screenshot_card_view"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@id/log_card_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_feedback_border"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/screenshot_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:checked="true"
                android:layout_marginLeft="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/screenshot"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:textColor="#57595c"
                android:layout_marginLeft="16dp" />

            <ImageView
                android:id="@+id/screenshot_iv"
                android:layout_width="70dp"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"
                tools:src="#ff9900" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/log_card_view"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@id/privacy_policy_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="@drawable/ic_feedback_border"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/log_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:checked="true"
                android:clickable="false"
                android:layout_marginLeft="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/system_logs"
                    android:textSize="16sp"
                    android:textColor="#57595c" />

            </LinearLayout>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_log_icon"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/privacy_policy_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="32dp"
        android:text="@string/feedback_statement"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>